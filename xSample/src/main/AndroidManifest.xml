<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanzhenjie.recyclerview.sample">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.menu.MenuActivity"
            android:label="Item中的菜单"/>
        <activity
            android:name=".activity.menu.ListActivity"
            android:label="List形式菜单"/>
        <activity
            android:name=".activity.menu.GridActivity"
            android:label="Grid形式菜单"/>
        <activity
            android:name=".activity.menu.ViewTypeActivity"
            android:label="ViewType菜单"/>
        <activity
            android:name=".activity.menu.VerticalActivity"
            android:label="竖向排布的菜单"/>
        <activity
            android:name=".activity.menu.DefineActivity"
            android:label="自定义菜单"/>

        <!-- -->
        <activity
            android:name=".activity.move.MoveActivity"
            android:label="Item拖拽和侧滑删除"/>
        <activity
            android:name=".activity.move.DragSwipeListActivity"
            android:label="ListItem拖拽/侧滑"/>
        <activity
            android:name=".activity.move.DragGridActivity"
            android:label="GridItem拖拽"/>
        <activity
            android:name=".activity.move.DragTouchListActivity"
            android:label="触摸即拖拽"/>
        <activity
            android:name=".activity.move.DefineActivity"
            android:label="自定义拖拽/侧滑"/>

        <!-- Header和Footer -->
        <activity
            android:name=".activity.header.HeaderViewActivity"
            android:label="Header和Footer"/>

        <!-- 刷新和加载更多 -->
        <activity
            android:name=".activity.load.RefreshLoadActivity"
            android:label="刷新和加载更多"/>
        <activity
            android:name=".activity.load.DefaultActivity"
            android:label="默认LoadMore"/>
        <activity
            android:name=".activity.load.DefineActivity"
            android:label="自定义LoadMore"/>

        <!-- 嵌套 -->
        <activity
            android:name=".activity.nested.NestedActivity"
            android:label="滑动布局嵌套使用"/>
        <activity
            android:name=".activity.nested.CardViewActivity"
            android:label="CardView"/>
        <activity
            android:name=".activity.nested.DrawerActivity"
            android:label="DrawerLayout"/>
        <activity
            android:name=".activity.nested.ViewPagerActivity"
            android:label="ViewPager"/>

        <!-- 二级列表 -->
        <activity
            android:name=".activity.expanded.ExpandableActivity"
            android:label="二级列表"/>

        <activity
            android:name=".activity.expanded.ListActivity"
            android:label="List形式二级列表"/>

        <activity
            android:name=".activity.expanded.GridActivity"
            android:label="Grid形式二级列表"/>

        <activity
            android:name=".activity.expanded.StaggeredActivity"
            android:label="Staggered形式二级列表"/>

        <!-- 黏贴分组 -->
        <activity
            android:name=".activity.group.GroupActivity"
            android:label="Sticky分组效果"/>
        <activity
            android:name=".activity.group.LayoutActivity"
            android:label="普通布局中Sticky"/>
        <activity
            android:name=".activity.group.MenuActivity"
            android:label="Item菜单Sticky分组"/>
        <activity
            android:name=".activity.nestscrollview.NestscrollViewActivity"
            android:label="NestscrollView嵌套"/>
    </application>

</manifest>